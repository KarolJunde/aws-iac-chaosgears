{
    "variables": {
        "aws_region": "{{env `AWS_REGION`}}",
        "aws_ami_prefix": "amzn-ami-chaosgears",
        "aws_ami_arch": "linux",
        "aws_ami_name": "baseami",
        "ami_type": "baseami",
        "retention_days": "30",
        "team_name": "ChaosGears",
        "environemt": "Development"
    },

    "builders": [{
        "type": "amazon-ebs",
        "region": "{{user `aws_region`}}",
        "instance_type": "t2.micro",
        "ssh_username": "ec2-user",
        "ami_name": "{{user `aws_ami_prefix`}}-{{user `aws_ami_arch`}}-{{user `aws_ami_name`}}",
        "tags": {
          "Region": "{{user `aws_region`}}",
          "Env": "{{user `environemt`}}",
          "Name": "{{user `ami_type`}}",
          "CreationTime": "{{isotime \"02-Jan-2006\"}}",
          "Retention": "{{user `retention_days`}}"
        },
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "amzn-ami-hvm*",
                "root-device-type": "ebs"
            },
            "owners": ["505861742066"],
            "most_recent": true
        }
    }],

    "provisioners": [
    {
        "type": "shell",
        "inline": [
            "sudo pip install ansible"
        ]
    },
    {
        "type": "ansible-local",
        "playbook_file": "ami-images/{{user `ami_type`}}/playbooks/base-amazon-linux.yml",
        "role_paths": [
            "ami-images/{{user `ami_type`}}/roles/base"
        ],
        "playbook_dir": "ami-images/{{user `ami_type`}}/playbooks"
    },

    {
      "type": "shell",
      "inline": [
        "rm .ssh/authorized_keys ; sudo rm /root/.ssh/authorized_keys"
      ]
    }]
}

